{% extends 'base.html.twig' %}

{% block title %}Quack{% endblock %}

{% block body %}
    <h1>Quack</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ quack.id }}</td>
            </tr>
            <tr>
                <th>Content</th>
                <td>{{ quack.content }}</td>
            </tr>
            <tr>
                <th>Auteur :</th>
                <td>{{ quack.author.duckname }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ quack.createdAt ? quack.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>{% if quack.photo %}
                <img src="{{ asset('uploads/' ~ quack.photo) }}" alt="Photo du quack" style="max-width: 300px;">
            {% endif %}
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_quack_index') }}">back to list</a>

    <a href="{{ path('app_quack_edit', {'id': quack.id}) }}">edit</a>

    {{ include('quack/_delete_form.html.twig') }}
{% endblock %}
